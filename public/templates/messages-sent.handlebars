<h1>Sent messages</h1>
<nav class="navbar navbar-inverse zrow">
    <ul class="nav navbar-nav col-md-8">
        <li><a href="#/messages/received">Recieved messages</a></li>
        <li><a href="#/messages/sent">Sent messages</a></li>
        <li><a href="#/messages/add">Send new message</a></li>
    </ul>
  </nav>
{{#if messages}}
<div id="accordion">
{{#each messages}}
    <h2>Title: {{title}} | Sent at: {{created}}</h2>
    <div>
        <h4>To: <a href="#/profile?userId={{recipientId}}">{{recipient}}</a></h4>
        <hr>
        <h3>{{content}}</h3>
    </div>
{{/each}}
</div>
{{else}}
    <h2>You have not sent any messages!</h2>
{{/if}}