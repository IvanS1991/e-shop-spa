<h1>Products</h2>
<hr>

  {{#each products}}
    <div class="event-box" data-id="{{id}}">
      <h2>Title: {{title}}</h2>
      <h3>Price: {{price}} BGN</h3>
      <h4>Description: {{description}}</h4>
      <p>Category: {{category}}</p>
      <p>Seller: {{seller}}</p>
      <button data-product-id="{{productId}}">Add to cart</button>
    </div>
    <hr>
  {{/each}}

