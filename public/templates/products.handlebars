<h1>Products</h2>
<nav class="navbar navbar-inverse zrow">
  <ul class="nav navbar-nav col-md-8">
      <li><a href="#/products">Browse products</a></li>
      <li><a href="#/products/add">Add new product</a></li>
  </ul>
</nav>
{{#if categories}}
<h2><a href="#/products">Categories</a></h2>
<ul>
{{#each categories}}
<li><a href="#/products?category={{this}}">{{this}}</a></li>
{{/each}}
</ul>
<hr>
{{else}}

{{/if}}
{{#if products}}
<div id="accordion" class="event-box">
{{#each products}}
    <h2>{{title}}</h2>
    <div>
      <p>Category: {{category}}</p>
      <p>Description: {{description}}</p>
      <p>Price: {{price}} BGN</p>
      <p>Seller: {{seller}}</p>
      <button data-product-id="{{productId}}" class="btn btn-primary">Add to cart</button>
    </div>
{{/each}}
</div>
{{else}}
<h2>There are no products</h2>
{{/if}}