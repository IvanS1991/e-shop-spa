<fieldset>
  <legend>Register a new User</legend>
  <div class="form-group">
     <label class="sr-only" for="tb-reg-username">Username</label>
     <input type="text" class="form-control" id="tb-reg-username" placeholder="Username">
  </div>
  <div class="form-group">
     <label class="sr-only" for="tb-reg-password">Password</label>
     <input type="password" class="form-control" id="tb-reg-password" placeholder="Password">
  </div><div class="form-group">
     <label class="sr-only" for="tb-reg-password-repeat">Password</label>
     <input type="password" class="form-control" id="tb-reg-password-repeat" placeholder="Repeat password">
  </div>
  <button id="btn-register" class="btn btn-primary">Register</button>
</fieldset>
